<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.BrandMapper">
    <select id="getBrand" resultType="com.example.demo.dto.BrandInfoDto">
        SELECT brand_code,
        brand_name
        FROM BRANDS
        WHERE brand_code = #{brandCode}
    </select>
    <insert id="addBrand" parameterType="com.example.demo.dto.BrandReqDto">
        insert into brands(brand_name)
        values (#{brandName})
    </insert>
    <update id="setBrand">
        update brands
        set brand_name = #{req.brandName}
        where brand_code = #{brandCode}
    </update>
    <delete id="deleteBrand">
        delete brands
        where brand_code = #{brandCode}
    </delete>
</mapper>